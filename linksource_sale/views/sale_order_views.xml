<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_inerit" model="ir.ui.view">
        <field name="name">sale.order.inherit.linksource</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name= 'action_draft']" position="after">
                <button name="action_update_prices" type="object" string="recompute prices"/>
            </xpath>
        </field>
    </record>
</odoo>